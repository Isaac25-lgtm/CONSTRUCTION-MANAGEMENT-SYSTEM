# BuildPro API - Environment Variables Template
# Copy this file to .env and fill in the values

# --------------------------------------------------------
# REQUIRED FOR PRODUCTION
# --------------------------------------------------------

# Database (Render will set this automatically)
DATABASE_URL=postgresql://buildpro:password@localhost:5432/buildpro_db

# Security (Render will auto-generate this)
SECRET_KEY=your-super-secret-key-min-32-characters-long

# Environment
ENVIRONMENT=production
DEBUG=false

# --------------------------------------------------------
# CLOUD STORAGE (Cloudflare R2 - for document persistence)
# --------------------------------------------------------
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens

USE_CLOUD_STORAGE=true
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=buildpro-documents
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://pub-xxx.r2.dev

# --------------------------------------------------------
# OPTIONAL SERVICES
# --------------------------------------------------------

# Redis (for caching/sessions)
REDIS_URL=redis://localhost:6379/0

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@buildpro.ug

# SMS (Africa's Talking)
AFRICAS_TALKING_USERNAME=sandbox
AFRICAS_TALKING_API_KEY=your-api-key
SMS_SENDER_ID=BuildPro
