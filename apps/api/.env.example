# Backend environment template
# Copy to apps/api/.env for local development.

# Database
# Local SQLite example:
# DATABASE_URL=sqlite:///./buildpro_local.db
# Local Postgres example:
DATABASE_URL=postgresql://buildpro:buildpro123@localhost:5432/buildpro

# App
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=change-this-in-production

# CORS (comma-separated list or JSON array of exact origins)
# Production example:
# ALLOWED_ORIGINS=https://<frontend-site>.onrender.com,http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173

# Storage
USE_CLOUD_STORAGE=false
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800

# Optional cloud storage
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=buildpro-documents
R2_ENDPOINT_URL=
R2_PUBLIC_URL=

# Optional Redis
REDIS_URL=redis://localhost:6379/0
