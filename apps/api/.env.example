# Backend environment template
# Copy to apps/api/.env for local development.

# Database
# Local SQLite example:
# DATABASE_URL=sqlite:///./buildpro_local.db
# Local Postgres example:
# DATABASE_URL=postgresql://<db_user>:<db_password>@localhost:5432/<db_name>
DATABASE_URL=sqlite:///./buildpro_local.db

# App
ENVIRONMENT=development
DEBUG=true
# Use a strong random value (>= 32 chars) in production.
SECRET_KEY=replace-with-a-strong-random-secret-min-32-chars
# Optional: force-open login mode (accept any email/password) even in production.
ALLOW_ANY_LOGIN=false

# CORS (comma-separated list or JSON array of exact origins)
# Production example:
# ALLOWED_ORIGINS=https://buildpro-web.onrender.com,http://localhost:5173,http://localhost:3000
ALLOWED_ORIGINS=http://localhost:5173

# AI (Gemini API)
GEMINI_API_KEY=

# Storage
USE_CLOUD_STORAGE=false
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800

# Optional cloud storage
# Required when USE_CLOUD_STORAGE=true (recommended for Render production)
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=buildpro-documents
R2_ENDPOINT_URL=
R2_PUBLIC_URL=

# Optional Redis
REDIS_URL=redis://localhost:6379/0
